---
import Layout from "../layouts/Layout.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import LinkButton from "../components/LinkButton.astro";
import SectionContainer from "../components/SectionContainer.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
import ContactIcon from "../components/icons/ContactIcon.astro"
---

<Layout title="Website of César - Desarrollador y Programador Web">
	<main class="px-4">
		<SectionContainer id="home" class="py-44 pb-24">
			<img
				class="rounded-full size-12 mb-4"
				src="logo.jpg"
				alt="avatar césar"
			/>
			<h1
				class="text-black dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row pb-6 lg:pb-10 gap-x-2"
			>
				Hola, soy César <div class="flex justify-center items-center">
				</div>
			</h1>
			<h2 class="text-xl opacity-80 text-wrap max-w-[700px]">
				Web developer interesado en contribuir a la comunidad, buscando oportunidades para aprender y crecer como profesional, mientras continúo mi viaje académico en Ingeniería de Sistemas. 
			</h2>
			<nav class="flex mt-8 flex-wrap gap-4">
				<LinkButton href="https://github.com/Cesar-Ch">
					<GithubIcon class="size-4 md:size-6" />
					Github
				</LinkButton>
			</nav>
		</SectionContainer>
		<SectionContainer id="projects" class="pt-16 pb-24 ">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
		<SectionContainer id="contact">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<ContactIcon class="size-7" />
				Contacto
			</h2>
			<Contact />
		</SectionContainer>
	</main>
</Layout>
