---
import ViteJSIcon from "./icons/ViteJSIcon.astro";
import TailwindCSSIcon from "./icons/TailwindCSSIcon.astro";
import GithubIcon from "./icons/GithubIcon.astro";
import LinkButton from "./LinkButton.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import ExpressIcon from "./icons/ExpressIcon.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import ThreeJSIcon from "./icons/ThreeJSIcon.astro";
import WebIcon from "./icons/WebIcon.astro";
import SQLiteIcon from "./icons/SQLiteIcon.astro";
import { getI18N } from "../i18n/";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const TAGS = {
    VITE: {
        name: "Vite.js",
        class: "bg-[#303030] text-white",
        icon: ViteJSIcon,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#303030] text-white",
        icon: TailwindCSSIcon,
    },
    REACT: {
        name: "React",
        class: "bg-[#303030] text-white",
        icon: ReactIcon,
    },
    EXPRESS: {
        name: "Express",
        class: "bg-[#303030] text-white",
        icon: ExpressIcon,
    },
    ASTRO: {
        name: "Astro",
        class: "bg-[#303030] text-white",
        icon: AstroIcon,
    },
    THREEJS: {
        name: "Threejs",
        class: "bg-[#303030] text-white",
        icon: ThreeJSIcon,
    },
    SQLITE: {
        name: "SQLite",
        class: "bg-[#303030] text-white",
        icon: SQLiteIcon,
    },
};

const PROJECTS = [
    {
        title: `${i18n.PROJECTS_PERIODIC_TABLE}`,
        description: "",
        link: "https://cesar-ch.github.io/periodic-table/",
        github: "https://github.com/Cesar-Ch/periodic-table",
        image: "projects/periodic-table.webp",
        tags: [
            TAGS.VITE,
            TAGS.REACT,
            TAGS.THREEJS,
            TAGS.TAILWIND,
            TAGS.EXPRESS,
        ],
    },
    {
        title: `${i18n.PROJECTS_MINESWEEPER}`,
        description: "",
        link: "https://cesarch-minesweeper.vercel.app/game/",
        github: "https://github.com/Cesar-Ch/minesweeper",
        image: "projects/minesweeper.png",
        tags: [TAGS.ASTRO, TAGS.REACT, TAGS.TAILWIND, TAGS.SQLITE],
    },
];
---

<div class="flex flex-col gap-y-16 w-full">
    {
        PROJECTS.map(({ title, description, tags, image, github, link }) => (
            <article class="flex flex-col md:flex-row justify-between p-4 w-full gap-4">
                <div class="overflow-hidden rounded-xl md:w-1/2 w-full h-full hover:border-gray-500 ">
                    <img
                        loading="lazy"
                        class="rounded-xl shadow-2xl shadow-white/10 hover:scale-105 m-auto transition ease-in-out duration-200 w-full h-80 md:h-56  object-cover"
                        src={
                            i18n.LANG !== "es"
                                ? `/website/${image}`
                                : `${image}`
                        }
                        alt={`Captura de pantalla del proyecto ${title}`}
                    />
                </div>
                <div class="m-2 md:w-1/2 w-full ">
                    <h3 class="text-2xl font-semibold mb-2">{title}</h3>
                    <ul class="flex gap-x-2 flex-wrap mb-2 gap-2">
                        {tags.map((tag) => (
                            <li>
                                <span
                                    class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}
                                >
                                    <tag.icon class="size-4" />
                                    {tag.name}
                                </span>
                            </li>
                        ))}
                    </ul>
                    <p class="text-lg mb-4 text-pretty">{description}</p>
                    <footer class=" flex gap-x-4 items-end  mt-4">
                        {github && (
                            <LinkButton href={github}>
                                <GithubIcon class="size-4" />
                                {i18n.PROJECTS_GITHUB}
                            </LinkButton>
                        )}
                        <LinkButton href={link}>
                            <WebIcon class="size-4" />
                            {i18n.PROJECTS_WEB}
                        </LinkButton>
                    </footer>
                </div>
            </article>
        ))
    }
</div>
